generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  password String
  token   String?
  role     UserRole @default(JOB_SEEKER)
  jobs    Job[]
}


model Job {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}


enum UserRole {
  JOB_POSTER
  JOB_SEEKER
}
